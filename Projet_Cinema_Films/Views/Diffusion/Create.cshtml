@model Projet_Cinema_Films.Models.DiffusionCreateForm
@inject IMovieRepository<Movie> movieRepository
@inject ICinemaPlaceRepository<CinemaPlace> cinemaPlaceRepository
@inject ICinemaRoomRepository<CinemaRoom> cinemaRoomRepository

@{
    ViewData["Title"] = "Create";
    int id = ViewBag.Id;
}

<h1>Create</h1>

<h4>DiffusionCreateForm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DiffusionDate" class="control-label"></label>
                <input asp-for="DiffusionDate" class="form-control" />
                <span asp-validation-for="DiffusionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiffusionTime" class="control-label"></label>
                <input asp-for="DiffusionTime" class="form-control" />
                <span asp-validation-for="DiffusionTime" class="text-danger"></span>
            </div>
       
            <div class="form-group">
                <label asp-for="AudioLang" class="control-label"></label>
                <select asp-for="AudioLang" class="form-control">
                    <option value="">Veuillez choisir une langue</option>
                    @foreach (var language in Enum.GetValues(typeof(Languages)))
                    {
                        <option value="@language">@language</option>
                    }
                </select>
                <span asp-validation-for="AudioLang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubTitleLang" class="control-label"></label>
                <select asp-for="SubTitleLang" class="form-control">
                    <option value="">Veuillez choisir une langue</option>
                    @foreach (var language in Enum.GetValues(typeof(Languages)))
                    {
                        <option value="@language">@language</option>
                    }
                </select>
                <span asp-validation-for="SubTitleLang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_CinemaRoom" class="control-label"></label>
                @Html.DropDownListFor(
                m => m.Id_CinemaRoom,
                cinemaRoomRepository.GetByCinemaPlace(id)
                .Select(d => new SelectListItem(){
                Text = d.Number.ToString(),
                Value = d.Id_CinemaRoom.ToString()}),
                "Veuillez choisir une salle",
                new { @class = "form-select"}
                )
                <span asp-validation-for="Id_CinemaRoom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Movie" class="control-label"></label>
                @Html.DropDownListFor(
                m => m.Id_Movie,
                movieRepository
                .Get()
                .Select(d => new SelectListItem(){
                Text = d.Title,
                Value = d.Id_Movie.ToString()}),
                "Veuillez choisir une film",
                new { @class = "form-select"}
                )
                <span asp-validation-for="Id_Movie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
