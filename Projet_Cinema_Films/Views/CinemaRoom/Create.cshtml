@model Projet_Cinema_Films.Models.CinemaRoomCreateForm
@inject ICinemaPlaceRepository<CinemaPlace> cinemaPlaceRepository

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CinemaRoomCreateForm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SitsCount" class="control-label"></label>
                <input asp-for="SitsCount" class="form-control" />
                <span asp-validation-for="SitsCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScreenWidth" class="control-label"></label>
                <input asp-for="ScreenWidth" class="form-control" />
                <span asp-validation-for="ScreenWidth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScreenHeight" class="control-label"></label>
                <input asp-for="ScreenHeight" class="form-control" />
                <span asp-validation-for="ScreenHeight" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Can3D" /> @Html.DisplayNameFor(model => model.Can3D)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Can4DX" /> @Html.DisplayNameFor(model => model.Can4DX)
                </label>
            </div>
         

                   <div class="form-group">
                <label asp-for="Id_cinemaPlace" class="control-label"></label>
                @Html.DropDownListFor(
                m => m.Id_cinemaPlace,
                cinemaPlaceRepository
                .Get()
                .Select(d => new SelectListItem(){
                Text = d.Name,
                Value = d.Id_CinemaPlace.ToString()}),
                "Veuillez choisir une film",
                new { @class = "form-select"}
                )
                <span asp-validation-for="Id_cinemaPlace" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
